@{
    Session.Timeout = 5000;
    Session["Site"] = "theatre.uz";
    var userID = (string)Session["UserID"];
    var roleName = (string)Session["Role"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

    <title>@ViewBag.Title - THEATRE.UZ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="nav sticky-top">
        <input type="checkbox" id="nav-check">
        <div class="nav-header">
            <div class="nav-title">
                <img id="navlogo" src="~/Content/Images/masks.png" alt="THEATRE.UZ" />
            </div>
        </div>
        <div class="nav-btn">
            <label for="nav-check">
                <span></span>
                <span></span>
                <span></span>
            </label>
        </div>

        <div class="nav-links mr-auto">
            <a href="1">Home</a>
            <a href="#">About theatre</a>
            <a href="#">Actors</a>
            <a href="#">Contacts</a>
        </div>

        <div class="nav-links ml-auto">
            <span>CT:</span>
            <span id="time"></span>
            @Html.Partial("_LoginPartial")
        </div>

    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="footer-distributed">
        <div class="footer-left">
            <h3>Central<span>theatre</span></h3>
            <p class="footer-links">
                <a href="#">Home</a>
                ·
                <a href="#">Pricing</a>
                ·
                <a href="#">About</a>
                ·
                <a href="#">Faq</a>
                ·
                <a href="#">Contact</a>
            </p>
            <p class="footer-company-name">Central theatre of Uzbekistan &copy; 2019</p>
        </div>
        <div class="footer-center">
            <div>
                <i class="fa fa-map-marker"></i>
                <p><span>105 Chekhov Street</span> Tashkent, Uzbekistan</p>
            </div>
            <div>
                <i class="fa fa-phone"></i>
                <p>+998 71 222 33 44</p>
            </div>
            <div>
                <i class="fa fa-envelope"></i>
                <p><a href="mailto:info@theatre.uz">info@theatre.uz</a></p>
            </div>
        </div>
        <div class="footer-right">
            <p class="footer-company-about">
                <span>About the theatre</span>
                Modern theatre includes performances of plays and musical theatre.
                The art forms of ballet and opera are also theatre and use many conventions such as acting, costumes and staging.
                They were influential to the development of musical theatre.
            </p>
            <div class="footer-icons">
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-linkedin"></i></a>
                <a href="#"><i class="fa fa-github"></i></a>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/Scripts/knockout-3.5.0.js")
    @Scripts.Render("~/Scripts/Custom/ko.simpleGrid.js")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/moment.min.js")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Custom/LoginForm.js")
    @RenderSection("scripts", required: false)

</body>
</html>
