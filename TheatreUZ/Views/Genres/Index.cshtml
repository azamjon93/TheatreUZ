@{
    ViewBag.Title = "Registered genres";
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Custom/GenresAdmin.js")"></script>

}

<h2>Registered genres</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-sm btn-success", @style = "display:block;float:right;margin:10px", @datatoggle = "tooltip", @title = "Қаторни ўчириш" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>State</th>
            <th>Name</th>
            <th>Added date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: viewModel.genres">
        <tr>
            <td data-bind="text: State.Name"></td>
            <td data-bind="text: Name"></td>
            <td data-bind="text: RegDate"></td>
            <td>
                <button class="btn btn-sm btn-danger">
                    Delete
                </button>
            </td>
        </tr>
    </tbody>
</table>
