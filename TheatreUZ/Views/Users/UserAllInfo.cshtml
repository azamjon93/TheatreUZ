@model TheatreUZ.Models.UserAllInfoModel

@{
    ViewBag.Title = "User all info";
}

<center>
    <h2>User all info</h2>
</center>

<div>
    <h4>User details</h4>

    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>
</div>

<div style="display: block; float: right">

    @using (Html.BeginForm("LogOut", "Auth"))
    {
        <input type="submit" value="Log out" class="btn btn-sm btn-danger" />
    }

</div>

<br />
<br />
<div class="clearfix"></div>
<h4>User orders</h4>
<hr />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].Spectacle.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].Spectacle.PlayDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].RegDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].State.Name)
            </th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Sales)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Spectacle.Name)
                </td>
                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => item.Spectacle.PlayDate)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td style="text-align:right">
                    @Html.DisplayFor(modelItem => item.RegDate)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.State.Name)
                </td>
                <td>
                    <div style="display: block; float: right">
                        @Html.ActionLink("Edit", "EditSale", new { id = item.ID }, new { @class = "btn btn-sm btn-primary" })
                        @Html.ActionLink("Delete", "DeleteSale", new { id = item.ID }, new { @class = "btn btn-sm btn-danger" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
